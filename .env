# 医疗健康AI助手 - 环境变量配置文件
# 复制此文件为 .env 并填入实际配置值

# ===========================================
# 应用基础配置
# ===========================================
APP_NAME="Medical AI Assistant"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_TIMEZONE=Asia/Shanghai

# ===========================================
# 医疗模式配置
# ===========================================
MEDICAL_MODE=true
MEDICAL_VERSION=1.0
MEDICAL_TITLE="医疗健康AI助手"

# ===========================================
# 数据库配置
# ===========================================
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=gptlink_edu
DB_USERNAME=gptlink
DB_PASSWORD=666666
DB_CHARSET=utf8mb4
DB_COLLATION=utf8mb4_unicode_ci

# ===========================================
# Redis配置
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=666666
REDIS_DB=0
REDIS_CACHE_DB=1
REDIS_SESSION_DB=2

# ===========================================
# 管理员配置
# ===========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=666666
ADMIN_EMAIL=admin@medical-gpt.local

# ===========================================
# DeepSeek AI配置
# ===========================================
# 必填：请填入您的DeepSeek API Key
OPENAI_API_KEY=sk-bc607febd5244be593f2f91647219206
OPENAI_MODEL=deepseek-chat
OPENAI_HOST=https://api.deepseek.com
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# ===========================================
# 医疗功能限制配置
# ===========================================
# 每日最大请求次数
MED_MAX_DAILY_REQUESTS=50
# 最大对话长度
MED_MAX_CONVERSATION_LENGTH=20
# 是否启用付费功能（医疗版本建议关闭）
MED_ENABLE_PAYMENT=false
# 是否启用用户注册
MED_ENABLE_REGISTRATION=true
# 是否启用简化认证
MED_SIMPLE_AUTH=true

# ===========================================
# 安全配置
# ===========================================
# 是否启用内容过滤
MED_CONTENT_FILTER=true
# 屏蔽关键词（JSON格式）
MED_BLOCKED_KEYWORDS='["药物滥用","自杀","暴力","违法","毒品","自残"]'
# 是否记录对话日志
MED_LOG_CONVERSATIONS=true
# 是否启用IP限制
MED_ENABLE_IP_LIMIT=true
# IP白名单（可选，逗号分隔）
MED_IP_WHITELIST=""

# ===========================================
# 界面配置
# ===========================================
# 系统标题
MED_SYSTEM_TITLE="医疗健康AI助手"
# 系统描述
MED_SYSTEM_DESCRIPTION="专业的医疗健康咨询AI助手，为您提供可靠的健康建议"
# 系统关键词
MED_SYSTEM_KEYWORDS="医疗,健康,AI助手,咨询,诊断建议"
# 主题色彩
MED_THEME_COLOR="#2c5aa0"
# Logo URL（可选）
MED_LOGO_URL=""

# ===========================================
# 邮件配置（可选）
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=666666
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@medical-gpt.local
MAIL_FROM_NAME="Medical AI Assistant"

# ===========================================
# 文件存储配置
# ===========================================
FILESYSTEM_DISK=local
FILE_UPLOAD_MAX_SIZE=20971520
FILE_ALLOWED_TYPES="jpg,jpeg,png,gif,pdf,doc,docx"

# ===========================================
# 日志配置
# ===========================================
LOG_CHANNEL=stack
LOG_LEVEL=info
LOG_MAX_FILES=30

# ===========================================
# 缓存配置
# ===========================================
CACHE_DRIVER=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120
QUEUE_CONNECTION=redis

# ===========================================
# 第三方服务配置（可选）
# ===========================================
# 百度翻译API（可选）
BAIDU_TRANSLATE_APP_ID=""
BAIDU_TRANSLATE_SECRET=""

# 腾讯云COS（可选）
TENCENT_COS_SECRET_ID=""
TENCENT_COS_SECRET_KEY=""
TENCENT_COS_REGION=""
TENCENT_COS_BUCKET=""

# 阿里云OSS（可选）
ALIYUN_OSS_ACCESS_KEY_ID=""
ALIYUN_OSS_ACCESS_KEY_SECRET=""
ALIYUN_OSS_BUCKET=""
ALIYUN_OSS_ENDPOINT=""

# ===========================================
# 监控配置（可选）
# ===========================================
# 是否启用性能监控
MED_ENABLE_MONITORING=true
# 监控数据保留天数
MED_MONITORING_RETENTION_DAYS=30

# ===========================================
# 备份配置（可选）
