# 医疗健康AI助手 - 阿里云服务器环境配置
# 域名: medicalgpt.asia
# 基于本地成功部署经验

# 基础配置
APP_NAME="Medical AI Assistant"
APP_ENV=production
APP_DEBUG=false
APP_URL=https://medicalgpt.asia
DOMAIN_NAME=medicalgpt.asia

# 数据库配置
MYSQL_ROOT_PASSWORD=your_secure_mysql_root_password_here
MYSQL_PASSWORD=your_secure_mysql_password_here
DB_HOST=mysql
DB_DATABASE=gptlink_edu
DB_USERNAME=gptlink
DB_PASSWORD=your_secure_mysql_password_here

# Redis配置
REDIS_HOST=redis
REDIS_PASSWORD=your_secure_redis_password_here
REDIS_PORT=6379

# OpenAI/DeepSeek API配置
OPENAI_API_KEY=your_deepseek_api_key_here
OPENAI_MODEL=deepseek-chat
OPENAI_HOST=https://api.deepseek.com
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# 医疗模式配置
MEDICAL_MODE=true
MEDICAL_SAFETY_CHECK=true
DAILY_REQUEST_LIMIT=100
SESSION_TIMEOUT=1800

# 安全配置
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here

# 邮件配置（可选）
MAIL_MAILER=smtp
MAIL_HOST=smtp.aliyun.com
MAIL_PORT=465
MAIL_USERNAME=your_email@aliyun.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=noreply@medicalgpt.asia
MAIL_FROM_NAME="Medical AI Assistant"

# 日志配置
LOG_CHANNEL=stack
LOG_LEVEL=info

# 缓存配置
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# 文件存储配置
FILESYSTEM_DRIVER=local

# 监控配置
MONITORING_ENABLED=true
METRICS_ENABLED=true

# SSL证书配置
SSL_CERT_PATH=/etc/letsencrypt/live/medicalgpt.asia/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/medicalgpt.asia/privkey.pem

# 备份配置
BACKUP_ENABLED=true
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS=30

# 性能配置
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=20M
PHP_POST_MAX_SIZE=20M

# Nginx配置
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
NGINX_CLIENT_MAX_BODY_SIZE=20M

# 时区配置
TZ=Asia/Shanghai

# 阿里云特定配置
ALIYUN_REGION=cn-hangzhou
ALIYUN_ACCESS_KEY_ID=your_aliyun_access_key_id
ALIYUN_ACCESS_KEY_SECRET=your_aliyun_access_key_secret

# CDN配置（可选）
CDN_ENABLED=false
CDN_URL=https://cdn.medicalgpt.asia

# 第三方服务配置
SMS_ENABLED=false
SMS_ACCESS_KEY_ID=your_sms_access_key_id
SMS_ACCESS_KEY_SECRET=your_sms_access_key_secret

# 数据库备份配置
DB_BACKUP_ENABLED=true
DB_BACKUP_S3_BUCKET=medicalgpt-backups
DB_BACKUP_S3_REGION=oss-cn-hangzhou